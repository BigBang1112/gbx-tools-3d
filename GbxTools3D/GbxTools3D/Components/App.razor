<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["GbxTools3D.styles.css"]" />

    @{
        var importMapDefinition = new ImportMapDefinition(
            new Dictionary<string, string>
            {
                ["three"] = "https://cdn.jsdelivr.net/npm/three@0.172.0/build/three.module.min.js",
                ["three/addons/"] = "https://cdn.jsdelivr.net/npm/three@0.172.0/examples/jsm/",
                ["@three.ez/instanced-mesh"] = "https://cdn.jsdelivr.net/npm/@three.ez/instanced-mesh/build/index.js",
                ["bvh.js"] = "https://cdn.jsdelivr.net/npm/bvh.js/build/index.js"
            }, null, null);
    }

    <ImportMap ImportMapDefinition="importMapDefinition" />

    <link rel="icon" type="image/png" href="favicon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Mono&family=Rubik+Glitch&display=swap" rel="stylesheet">



    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script src="https://mrdoob.github.io/stats.js/build/stats.min.js"></script>
    <script src='https://storage.ko-fi.com/cdn/scripts/overlay-widget.js'></script>
    <script>
        kofiWidgetOverlay.draw('bigbang1112', {
          'type': 'floating-chat',
          'floating-chat.donateButton.text': 'Donate',
          'floating-chat.donateButton.background-color': '#323842',
          'floating-chat.donateButton.text-color': '#fff'
        });
    </script>
</body>

</html>
